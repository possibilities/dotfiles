{
  "model": "opus",
  "permissions": {
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks yolo"
          },
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "npx claude-code-generic-hooks store ~/.claude/hooks.db"
          }
        ]
      }
    ]
  }
}
